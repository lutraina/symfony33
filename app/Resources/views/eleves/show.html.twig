{% extends 'base.html.twig' %}

{% block body %}
    <h1>Elefe</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ elefe.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ elefe.nom }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ elefe.age }}</td>
            </tr>
            <tr>
                <th>Debutcours</th>
                <td>{% if elefe.debutCours %}{{ elefe.debutCours|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('eleves_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('eleves_edit', { 'id': elefe.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
